svg.slicey(
    ng-attr-height='{{diameter || 100}}'
    ng-attr-width='{{diameter || 100}}'
    viewBox="-0.5 -0.5 1 1")

  //- This circle makes the blending better between arcs
  circle.background(
      r='.49'
      cx='0'
      cy='0')

  path(
      ng-repeat='arc in arcs'
      ng-attr-d='M0,0 L{{arc.x1}},{{arc.y1}} A0.5,0.5 0 {{arc.largeArcFlag}},1 {{arc.x2}},{{arc.y2}} z'
      ng-class='arc.color')

  circle.donut(
      ng-if='donut'
      r='.25'
      cx='0'
      cy='0')
